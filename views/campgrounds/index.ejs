<%- include("../partials/header") %>

<!-- as the index.ejs is not in the same directory as partials the two dots will take you out of the subfolder (campgrounds) to the views folder where the partials header is -->



<div class="container">
	
	<header class="jumbotron">
	<div class="container">
		<h1>Welcome to YelpCamp</h1>
		<p>View our handpicked campgrounds from all over the             world </p>
		<p>
		<a class="btn btn-primary btn-lg"                  href="/campgrounds/new">Add New Camground</a>
		</p>
	</div>	
	</header>

 <div class="row">
	<div class="col-lg-12">
	   <h3>Our Most Popular Campgrounds</h3>
	</div>
 </div>

 <div class="row" style="display: flex; flex-wrap: wrap;">
	<% campgrounds.forEach(function(campground){ %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%=campground.image%>">
		    </div>
			<div class="caption">
				<h4><%=campground.name%></h4>
		    </div>
			<p>
				<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">
						 More Info</a>
			</p>
		</div>
	<% }); %>
  </div>

</div>

	
<%- include("../partials/footer") %>